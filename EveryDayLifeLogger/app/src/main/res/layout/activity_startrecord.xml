<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="finaltermproject.myapplication.StartRecordActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAPPY"
        android:id="@+id/happy"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="HappyButtonClicked"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAD"
        android:id="@+id/sad"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/happy"
        android:layout_centerHorizontal="true"
        android:onClick="SadButtonClicked"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXCITED"
        android:id="@+id/excited"
        android:layout_marginTop="68dp"
        android:onClick="ExcitedButtonClicked"
        android:textSize="30dp"
        android:layout_below="@+id/sad"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FUNNY"
        android:id="@+id/funny"
        android:onClick="FunnyButtonClicked"
        android:layout_below="@+id/excited"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 감정을 선택하시오."
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>